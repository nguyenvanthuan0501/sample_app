<% provide:title, t("static_pages.sessions.new.title") %>
<h1><%= t("static_pages.sessions.new.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to t("static_pages.new.password"),
        new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "static_pages.sessions.new.remember" %></span>
      <% end %>

      <%= f.submit t("static_pages.sessions.new.title") , class: "btn btn-primary" %>
    <% end %>

    <p>
      <%= t("static_pages.sessions.new.new_user") %>
      <%= link_to t("static_pages.sessions.new.signup"), signup_path %>
    </p>
  </div>
</div>
